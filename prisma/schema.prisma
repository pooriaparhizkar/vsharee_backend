generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(uuid())
  email         String         @unique
  password      String
  name          String
  createdAt     DateTime       @default(now())

  createdGroups Group[]        @relation("CreatedGroups")
  memberGroups  GroupMember[]

  sentMessages  GroupMessage[] @relation("UserSentMessages")
}

model Group {
  id          String         @id @default(uuid())
  name        String
  description String
  createdAt   DateTime       @default(now())
  creatorId   String
  creator     User           @relation("CreatedGroups", fields: [creatorId], references: [id])
  members     GroupMember[]
  messages    GroupMessage[] @relation("GroupMessages")
}

model GroupMember {
  group   Group  @relation(fields: [groupId], references: [id])
  groupId String
  user    User   @relation(fields: [userId], references: [id])
  userId  String
  role    Role   @default(MEMBER)

  @@id([groupId, userId])
}

enum Role {
  CREATOR
  CONTROLLER
  MEMBER
}

model GroupMessage {
  id        String   @id @default(uuid())
  text      String
  senderId  String
  sender    User     @relation("UserSentMessages", fields: [senderId], references: [id])
  groupId   String
  group     Group    @relation("GroupMessages", fields: [groupId], references: [id])
  createdAt DateTime @default(now())
}