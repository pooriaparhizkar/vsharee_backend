{
    "compilerOptions": {
        "module": "CommonJS",
        "moduleResolution": "node",
        "target": "ES2020",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "skipLibCheck": true,
        "noEmitOnError": false,
        "strict": true,
        "noImplicitAny": false,
        "strictNullChecks": false
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
